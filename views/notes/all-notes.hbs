<ul class="note">
  {{#each notes}}
  <li>
    <span>
        <h4 >
          {{ title }}
        </h4>
        <p>{{ description }}</p>
        <p>Created At : {{date}}</p>
        <p>Due At : {{due_date}}</p>
        <form class="button-class" action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <a class="btn btn-primary btn-circle" href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
          <button type="submit" class="btn btn-danger btn-circle"><i class="far fa-trash-alt"></i></button>
        </form>
        </span>
  </li>
  {{else}}
  <div class="card ">
    <div class="card-body">
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create Note!</a>
    </div>
  </div>
  {{/each}}
</ul>

